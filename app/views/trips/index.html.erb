<h1>TRIPR</h1>

<main>
  
    <% @trips.each do |trip| %>
    <div class="listing">
        <span class="list-title"><%= trip.title %></span>
        <span class="list-title">Location: </span><%= trip.location %> 
        <span class="list-title">Duration: </span><%= trip.duration  %> <%=" day".pluralize(trip.duration)%>
        <span class="list-title">Trip begins: </span><%= trip.start_date %> 
        <span class="list-title">Trip ends: </span><%= trip.end_date %> 
        <span class="list-title">Price: </span><%= number_to_currency(trip.price.to_f) %><br>
        <%= link_to "See Details", trip_path(trip.id) %><br>
      </div> 
    <% end %>
  
</main>

