<h1>Trippr</h1>

<main>
  <% @trips.each do |trip| %>
    Trip: <%= trip.title %> 
    Location: <%= trip.location %> 
    Duration: <%= trip.duration  %> <%=" day".pluralize(trip.duration)%>
    Trip begins: <%= trip.start_date %> 
    Trip ends: <%= trip.end_date %> 
    Price: <%= number_to_currency(trip.price.to_f) %><br>
    <%= link_to "See Details", trip_path(trip.id) %><br>
  <% end %>
</main>

