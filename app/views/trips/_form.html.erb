<%= form_with model: trip, local: true do |f| %> 

  <%= f.label :title %><br><%= f.text_field :title %><br><br>
  <%= f.label :duration, 'Please select the duration in nights (0 for daytrip):' %><br><%= f.select :duration, (0..90) %><br><br>
  <%= f.label :description %><br><%= f.text_area :description %><br><br>
  <%= f.label :start_date, 'Start Date' %><br><%= f.date_select :start_date%><br><br>
  <%= f.label :end_date, 'End Date' %><br><%= f.date_select :end_date%><br><br>
  <%= f.label :price %><br><%= f.number_field :price %><br><br>
  <%= f.label :activity%><br>
  <%= f.collection_select(:activity_id, Activity.all, :id, :activity_type, { :prompt => 'Select an Activity', :selected => trip.activity_id }, { class: 'form-control' }) %>
  <br><br>
  <%= f.label :location, "Please enter the national park, town or other details for where the trip will take place:" %><br><%= f.text_field :location %><br><br>
  
  Please enter pick up and drop off address for the trip: <br><br>
  <%= f.fields_for :address do |ff| %>
    <%= ff.label :addr1 %><br><%= ff.text_field :addr1 %><br>
    <%= ff.label :addr2 %><br><%= ff.text_field :addr2 %><br>
    <%= ff.label :city %><br><%= ff.text_field :city %><br>
    <%= ff.label :state %><br><%= ff.text_field :state %><br>
    <%= ff.label :postcode %><br><%= ff.number_field :postcode %><br>
  <% end %>
    
  <%= f.submit %>

<% end %>