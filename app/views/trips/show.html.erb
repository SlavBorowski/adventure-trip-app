<h1>TRIPPR</h1>

<main>
  <div class="container">
    <h2><%= @trip.title %></h2>
    Location: <%= @trip.location %><br>
    Duration: The trip runs for <%= @trip.duration+1 %>  days and <%= @trip.duration %>  nights.<br>
    Starting: <%= @trip.start_date %> Ending: <%= @trip.end_date %><br>
    Location: <%= @trip.location %><br>
    Description: <%= @trip.description %><br>
    Address (for pick up and drop off):<br>
    <%= @trip.address.addr1 %>,<br> 
    <% if @trip.address.addr2 != "" %>
      <%= @trip.address.addr2 %>,<br>
    <% end %>  
    <%= @trip.address.city %>,<br>
    <%= @trip.address.state %> <%= @trip.address.postcode %><br>
    <%= image_tag @trip.image, class:"trip-image" %><br>
    
  </div>
  <div class="btm-bar">
  <%= link_to "Back", trips_path %> 
  <% if seller_signed_in? && current_seller.id == @trip.seller_id%>
    <%= link_to "Edit", edit_trip_path(@trip)  %>
    <%= link_to "Delete", trip_path(@trip), method: :delete  %>
  <% end %>
  </div>
</main>  


